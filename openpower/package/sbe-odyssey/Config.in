config BR2_PACKAGE_SBE_ODYSSEY
    bool "sbe-odyssey"
    depends on BR2_PACKAGE_OPENPOWER_PNOR_P10
    select BR2_PACKAGE_HOST_PYTHON3
    select BR2_PACKAGE_HOST_PYTHON3_SSL
    select BR2_PACKAGE_HOST_PYTHON3_BZIP2
    select BR2_PACKAGE_OP_IMAGE_TOOLS
    help
        Odyssey SBE package.

choice
    prompt "SBE Odyssey version"
    default BR2_SBE_ODYSSEY_LATEST_VERSION

config BR2_SBE_ODYSSEY_LATEST_VERSION
    bool "Use latest SBE Odyssey main branch"

endchoice

config BR2_SBE_ODYSSEY_VERSION
    string
    default "9b5bd5120ccf5f60ed258c6a2f383975b5d3f311" if BR2_SBE_ODYSSEY_LATEST_VERSION
